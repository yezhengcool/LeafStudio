<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- 播放器视图 -->
    <androidx.media3.ui.PlayerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:use_controller="false"
        app:resize_mode="fill"
        app:surface_type="surface_view"
        app:show_buffering="when_playing" />

    <!-- IJKPlayer 专用容器 -->
    <FrameLayout
        android:id="@+id/fl_ijk_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/black" />

    <!-- 加载背景图 -->
    <ImageView
        android:id="@+id/iv_loading_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:background="@color/black" />

    <!-- 左侧频道列表侧边栏 -->
    <include
        android:id="@+id/sidebar_channel_root"
        layout="@layout/sidebar_channel_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 右侧线路选择侧边栏 -->
    <include
        android:id="@+id/sidebar_route_root"
        layout="@layout/sidebar_route_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 顶部状态栏 -->
    <LinearLayout
        android:id="@+id/top_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#66000000"
        android:padding="12dp"
        android:gravity="end|center_vertical"
        android:visibility="gone"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 跑马灯提示 -->
        <TextView
            android:id="@+id/tv_marquee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:layout_marginEnd="16dp" />

        <!-- 分辨率 -->
        <TextView
            android:id="@+id/tv_video_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginEnd="16dp" />

        <!-- 天气 -->
        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginEnd="16dp" />

        <!-- 时间日期 -->
        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 底部按钮容器 -->
    <LinearLayout
        android:id="@+id/bottom_controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:background="#66000000"
        android:padding="1dp"
        android:alpha="1.0">

        <!-- 频道按钮 -->
        <Button
            android:id="@+id/btn_channel_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="频道"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:focusable="true"
            android:clickable="true" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <!-- 线路按钮 -->
        <Button
            android:id="@+id/btn_route_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线路"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:focusable="true"
            android:clickable="true" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <!-- 解码按钮 -->
        <Button
            android:id="@+id/btn_decoder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:focusable="true"
            android:clickable="true" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <!-- 画面比例按钮 -->
        <Button
            android:id="@+id/btn_aspect_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="适应"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:focusable="true"
            android:clickable="true" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <!-- 多媒体按钮 -->
        <Button
            android:id="@+id/btn_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多媒体"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:focusable="true"
            android:clickable="true" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <!-- 菜单按钮 -->
        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜单"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:focusable="true"
            android:clickable="true" />
    </LinearLayout>

    <!-- 分辨率显示 -->
    <TextView
        android:id="@+id/tv_resolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@drawable/channel_button_bg"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        android:alpha="0.8" />

    <!-- 大大的黄色台号显示 -->
    <TextView
        android:id="@+id/tv_channel_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        android:textColor="#FFFF00"
        android:textSize="120sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:visibility="gone"
        android:alpha="0.9" />

    <!-- 网络状态提示 -->
    <LinearLayout
        android:id="@+id/layout_network_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/dialog_background"
        android:padding="24dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_network_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络连接中断，正在重连..."
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>

</FrameLayout>
